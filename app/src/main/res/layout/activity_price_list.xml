<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bachground"
    tools:context=".PriceList">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Prices"
        android:background="@drawable/custom_label"
        android:textColor="#08D6F0"
        android:textSize="50sp" />

    <Button
        android:id="@+id/CPrices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/custom_button"
        android:text="Cellphones Prices"
        android:textColor="#F74007" />

    <Button
        android:id="@+id/PartsPrices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/custom_button"
        android:text="Parts Prices"
        android:textColor="#F74007" />

    <Button
        android:id="@+id/accPrices"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/custom_button"
        android:text="Accessories Prices"
        android:textColor="#F74007" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imagebuttonbackP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="300dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            app:srcCompat="@drawable/ic_arrow_back_black_24dp" />
    </LinearLayout>

</LinearLayout>